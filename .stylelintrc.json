{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-idiomatic-order"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"indentation": "tab",
		"font-family-name-quotes": "always-where-required",
		"color-hex-case": "upper",
		"selector-class-pattern": "^.*$",
		"declaration-block-no-redundant-longhand-properties": [
			true,
			{
				"ignoreShorthands": [
					"/grid/"
				]
			}
		]
	}
}